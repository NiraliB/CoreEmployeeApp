@model EmpAppCoreEF_Self.Models.DepartmentModel

@{
    ViewData["Title"] = "Add Department";
}

<h3>Add Department</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <form asp-action="Create">
            <div class="row">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DeptId" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DeptName" class="control-label">Department</label>
                        <input asp-for="DeptName" class="form-control" />
                        <span asp-validation-for="DeptName" class="text-danger field-validation-valid"></span>
                    </div>
                </div>
                <div class="col-md-4" style="margin-top:23px;">
                    <div class="form-group">
                        <input type="submit" id="btnSaveDeptData" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-4">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
