@model EmpAppCoreEF_Self.Models.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp Here</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/common.css" rel="stylesheet" />
    <link href="~/css/LoginStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <form asp-action="SignUp" method="post">
            <div class="form-signin">
                <h2 class="form-signin-heading">Sign Up</h2>

                <input asp-for="EmailId" type="text" class="form-control" id="EmailId" placeholder="EmailId" />
                <span asp-validation-for="EmailId" class="text-danger field-validation-valid"></span>

                <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger field-validation-valid"></span>

                <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger field-validation-valid"></span>

                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" onkeyup="checkConfirmPass()" placeholder="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger field-validation-valid"></span>

                <input class="btn btn-lg btn-primary btn-block" type="submit" id="btnRegister" value="Register" />
                @*<button class="btn btn-lg btn-primary btn-block" type="button" onclick="GetRegister()">Register</button>*@
            </div>
            </form>
    </div>
</body>
</html>
